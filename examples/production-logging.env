# Production Logging Configuration Example
# Copy this to your production .env file and adjust values

# Environment
ENVIRONMENT=production
DEBUG=false

# Logging Configuration for Production
LOG_LEVEL=INFO
ENABLE_JSON_LOGS=true  # Enable structured JSON logs for production
ENABLE_AUDIT_LOGS=true
ENABLE_PERFORMANCE_LOGS=true
LOG_FILE_PATH="/var/log/fastapi/app.log"  # Adjust for your production setup
SLOW_REQUEST_THRESHOLD=0.5  # Lower threshold for production monitoring

# Security - Use strong secrets in production
SECRET_KEY="your-super-secure-production-secret-key-here"

# Database - Use managed database service
DATABASE_URL="postgresql+asyncpg://user:password@your-production-db:5432/dbname"
DATABASE_URL_TEST="postgresql+asyncpg://fastapi_user:fastapi_password@localhost:5432/fastapi_db_test"

# Redis - Use managed Redis service  
REDIS_URL="redis://your-production-redis:6379"
REDIS_PASSWORD="your-redis-password"

# Rate Limiting - Enable in production
ENABLE_RATE_LIMITING=true

# CORS - Restrict to your production domains
BACKEND_CORS_ORIGINS=["https://your-production-domain.com"]

# Disable docs in production
ENABLE_DOCS=false
OPENAPI_URL=""
DOCS_URL=""
REDOC_URL=""
