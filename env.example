# Project Configuration
PROJECT_NAME="FastAPI Clean Project"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Configuration
API_STR="/api/v1"
ENABLE_DOCS=true
OPENAPI_URL="/openapi.json"
DOCS_URL="/docs"
REDOC_URL="/redoc"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://fastapi_user:fastapi_password@localhost:5432/fastapi_db"

# Security Settings
SECRET_KEY="super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
ENABLE_RATE_LIMITING=false

# Database Credentials (for Docker)
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=fastapi_password
POSTGRES_DB=fastapi_db

# pgAdmin Configuration (for Docker)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
